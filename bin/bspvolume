#!/usr/bin/env bash

## Copyright (C) 2020-2022 Aditya Shakya <adi1090x@gmail.com>
##
## Script to manage speaker volume on Archcraft.

# Icons
iDIR='/usr/share/icons/Papirus-Dark/48x48/status'
notify_cmd='dunstify -u low -h string:x-dunst-stack-tag:obvolume'


# Get Volume
get_volume() {
	amixer -D pulse sget Master | grep 'Front Left:' | awk -F'[][]' '{print $2}' | sed 's/%//'
}

# Get icons
get_icon() {
	current="$(get_volume)"
	if [[ "$current" -eq "0" ]]; then
		icon="$iDIR/notification-audio-volume-muted.svg"
	elif [[ ("$current" -ge "0") && ("$current" -le "30") ]]; then
		icon="$iDIR/notification-audio-volume-low.svg"
	elif [[ ("$current" -ge "30") && ("$current" -le "65") ]]; then
		icon="$iDIR/notification-audio-volume-medium.svg"
	elif [[ ("$current" -ge "65") && ("$current" -le "100") ]]; then
		icon="$iDIR/notification-audio-volume-high.svg"
	fi
}

# Notify
notify_user() {
	${notify_cmd} -i "$icon" "Volumen : $(get_volume)%"
}

# Increase Volume
inc_volume() {
	[[ `pulsemixer --get-mute` == 1 ]] && pulsemixer --unmute
	amixer -D pulse sset Master 5%+ && get_icon && notify_user
}

# Decrease Volume
dec_volume() {
	[[ `pulsemixer --get-mute` == 1 ]] && pulsemixer --unmute
	amixer -D pulse sset Master 5%- && get_icon && notify_user
}

# Toggle Mute
toggle_mute() {
	if [[ `pulsemixer --get-mute` == 0 ]]; then
		pactl set-sink-mute @DEFAULT_SINK@ toggle && ${notify_cmd} -i "$iDIR/notification-audio-volume-muted.svg" "Mudo"
	else
		pactl set-sink-mute @DEFAULT_SINK@ toggle && get_icon && ${notify_cmd} -i "$icon" "Activado"
	fi
}

# Execute accordingly
if [[ -x `which pulsemixer` ]]; then
	if [[ "$1" == "--get" ]]; then
		get_volume
	elif [[ "$1" == "--inc" ]]; then
		inc_volume
	elif [[ "$1" == "--dec" ]]; then
		dec_volume
	elif [[ "$1" == "--toggle" ]]; then
		toggle_mute
	else
		echo $(get_volume)%
	fi
else
	${notify_cmd} "'pulsemixer' is not installed."
fi
