{
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "1": "",
      "2": "",
      "3": "",
      "4": "",
      "5": "",
      "6": "",
      "7": "",
      "8": "",
      "default": ""
    },
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1"
  },
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 16,
    "icon-theme": "Papirus-Dark",
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": [
      "ranger",
      "cava",
      "btop",
      "asciiquarium -t",
      "ueberzugpp_90qdi2zvqi",
      "unimatrix -c blue -s 95"
    ],
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition"
    },
    "rewrite": {
      "Firefox Web Browser": "Firefox",
      "Foot Server": "Terminal"
    }
  },
  "hyprland/window": {
    "format": "{title}",
    "max-length": 40,
    "rewrite": {
      "": "Arch Linux"
    },
    "separate-outputs": true
  },
  "custom/cliphist": {
    "format": "",
    "on-click-right": "cliphist list | rofi -dmenu -theme /home/josue/.config/rofi/applets/shared/clipmenu.rasi -p 'Portapapeles' | cliphist decode | wl-copy",
    "on-click": "cliphist list | rofi -dmenu -theme /home/josue/.config/rofi/applets/shared/clipmenu.rasi -p 'Portapapeles' | cliphist decode | wl-copy",
    "tooltip": false
  },
  "custom/updates": {
    "format": " {}",
    "tooltip-format": "{}",
    "escape": true,
    "return-type": "json",
    "exec": "~/.config/waybar/scripts/updates.sh",
    "restart-interval": 60,
    "on-click": "kitty -e yay -Syu",
    "tooltip": false
  },
  "custom/filemanager": {
    "format": "",
    "on-click": "nemo",
    "tooltip": false
  },
  "custom/browser": {
    "format": "",
    "on-click": "google-chrome-stable",
    "tooltip": false
  },
  "custom/appmenu": {
    "format": "Apps",
    "on-click": "sh ~/.config/rofi/launchers/type-2/launcher.sh",
    "tooltip": false
  },
  "custom/exit": {
    "format": "",
    "on-click": "sh ~/.config/rofi/applets/bin/powermenu.sh",
    "tooltip": false
  },
  "keyboard-state": {
    "numlock": false,
    "capslock": true,
    "format": "{icon}",
    "format-icons": {
      "locked": "",
      "unlocked": ""
    }
  },
  "tray": {
    "icon-size": 22,
    "spacing": 10
  },
  "clock": {
    "timezone": "America/El_Salvador",
    "format": "{:%d %b %y %I:%M}",
    "format-alt": "{:%a %d %b %Y, %R}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#cba6f7'><b>{}</b></span>",
        "days": "<span color='#cdd6f4'><b>{}</b></span>",
        "weekdays": "<span color='#89b4fa'><b>{}</b></span>",
        "today": "<span background='#94e2d5' color='#1e1e2e'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "custom/system": {
    "format": "",
    "tooltip": false
  },
  "cpu": {
    "format": "/ C {usage}% ",
    "on-click": "alacritty -e htop"
  },
  "memory": {
    "format": "/ M {}%",
    "on-click": "alacritty -e htop"
  },
  "disk": {
    "interval": 30,
    "format": "D {percentage_used}% ",
    "path": "/",
    "on-click": "alacritty -e htop"
  },
  "hyprland/language": {
    "format": " {short}"
  },
  "group/hardware": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 250,
      "children-class": "not-memory",
      "transition-left-to-right": false
    },
    "modules": ["custom/system", "disk", "cpu", "memory"]
  },
  "group/quicklinks": {
    "orientation": "horizontal",
    "modules": ["custom/filemanager", "custom/browser"]
  },
  "network": {
    "format": "{ifname}",
    "format-wifi": " {ipaddr}",
    "format-ethernet": " {ipaddr}",
    "format-disconnected": " Disconnected",
    "tooltip-format": " {ifname} via {gwaddri}",
    "tooltip-format-wifi": " {essid} ({signalStrength}%)",
    "tooltip-format-ethernet": " {ifname} ({ipaddr}/{cidr})",
    "tooltip-format-disconnected": " Disconnected",
    "max-length": 50,
    "on-click": "networkmanager_dmenu"
  },
  "battery": {
    "bat": "BAT1",
    "adapter": "ACAD",
    "full-at": 99,
    "tooltip": true,
    "interval": 1,
    "states": {
      "warning": 40,
      "critical": 30
    },
    "format": "{icon} {capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": " {capacity}%",
    "format-alt": "{icon} {time}",
    "format-full": " Full",
    "format-icons": ["", "", "", "", ""],
    "max-length": 25
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": "{icon} {volume}%",
    "format-bluetooth-muted": "{icon} muted",
    "format-muted": " muted",
    "format-source": "{volume}% ",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", "", ""]
    },
    "on-click-right": "pavucontrol",
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle && volume-helper"
  },
  "bluetooth": {
    "format": " {status}",
    "format-off": " {status}",
    "format-connected": " {device_alias}",
    "format-disabled": " {status}",
    "format-no-controller": "",
    "tooltip-format": "{controller_alias}\t{controller_address}",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "interval": 30,
    "on-click": "rofi-bluetooth -theme /home/josue/.config/rofi/applets/shared/clipmenu.rasi -p 'Bluetooth'",
    "on-click-right": "kitty --class 'kitty-float' -e bluetoothctl  &"
  },
  "user": {
    "format": "{user}",
    "interval": 60,
    "icon": false
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "tooltip": true,
    "format-icons": {
      "activated": "",
      "deactivated": ""
    },
    "on-click-right": "swaylock"
  },
  "backlight": {
    "device": "amdgpu_bl1",
    "format": "{icon} {percent}%",
    "format-icons": ["", "", ""]
  }
}
